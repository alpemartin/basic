REM ***********************
REM
REM DESCOMPONIENDO FRACCIONES
REM EN SUMA DE FRACCIONES CON
REM NUMERADOR UNIDAD.
REM
REM ***********************
REM
PRINT "CUAL ES EL NUMERADOR";
INPUT A
PRINT
PRINT "CUAL ES EL DENOMINADOR";
INPUT B
PRINT
LET X=INT(B/A)
LET X=X+1
IF X>=INT(2*B/A)+1 THEN 90
LET Y=B*X/(X*A-B)
IF Y<> INT (Y) THEN 80
PRINT A;"/";B;"IGUAL 1/";X;"+1/";Y
PRINT
GOTO 30
END